<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container_favorite_tv"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.favoritetvshow.FavoriteTvShowFragment">

    <RelativeLayout
        android:id="@+id/nothing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold_italic"
            android:textSize="18sp"
            android:text="@string/try_to_add_some_favorite_tv_show"
            android:layout_below="@+id/favorite_lottie"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/favorite_lottie"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/mobile_interactions_lottie" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_favorite_tv_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>